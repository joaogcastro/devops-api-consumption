<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .voo {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
            display: flex;
            justify-content: space-between;
        }
        .voo:last-child {
            border-bottom: none;
        }
        .voo-info {
            flex-grow: 1;
        }
        .voo-info h3 {
            margin: 0;
            color: #007BFF;
        }
        .voo-info p {
            margin: 5px 0;
            color: #555;
        }
        .voo-id {
            font-weight: bold;
            color: #888;
            margin-left: 10px;
        }
        .search-container {
            margin-bottom: 20px;
            text-align: center;
        }
        .search-input {
            padding: 10px;
            width: 80%;
            max-width: 400px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .search-input:focus {
            border-color: #007BFF;
            outline: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><%= mensagem %></h1>
        <div class="search-container">
            <label for="search" style="display: none;">Buscar por destino:</label>
            <input type="text" id="search" class="search-input" placeholder="Buscar por destino..." onkeyup="filterVoos()">
        </div>
        <div id="voos-list">
            <% dados.voos.forEach(function(voo) { %>
                <div class="voo" data-destino="<%= voo.destino.toLowerCase() %>">
                    <div class="voo-info">
                        <h3><%= voo.origem %> <i class="fas fa-plane"></i> <%= voo.destino %></h3>
                        <p>Companhia Aérea: <span class="company"><%= voo.companhia %></span></p>
                        <p>Preço: R$<span class="price"><%= voo.preco %></span></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
        function filterVoos() {
            const input = document.getElementById('search');
            const filter = input.value.toLowerCase();
            const voos = document.querySelectorAll('.voo');

            if (filter.trim() === '') {
                voos.forEach(voo => {
                    voo.style.display = '';
                });
                return;
            }

            voos.forEach(voo => {
                const destino = voo.getAttribute('data-destino');
                if (destino.includes(filter)) {
                    voo.style.display = '';
                } else {
                    voo.style.display = 'none';
                }
            });
        }
    </script>
</body>
</html>
